<script>
    $(function () {
        $('#file').on('change', function () {

            var file = this.files[0];
            var reader = new FileReader();
            reader.onload = viewer.load;
            reader.readAsDataURL(file);
            viewer.setProperties(file);

        });
        var viewer = {
            load: function (e) {
                $('#preview').attr('src', e.target.result);
            },

        }
    });
</script>

